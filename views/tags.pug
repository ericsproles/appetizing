extends layout

include mixins/_storeCard

block content
  .inner
    h2 #{tag || 'Tags'}
    ul.tags
      each t in tags
        li.tag
          //- Set tag class to active if the tag id is equal to the current iteration that the user is on
          a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? `tag__link--active` : '') )
            span.tag__text= t._id
            span.tag__count= t.count 
  .stores
    each store in stores
      +storeCard(store)